doctype html
html
  head
    link(type='text/css', rel='stylesheet', href='/stylesheets/site.css')
    |     
    title Hello
    |   &#x9;
    style.
      .alignmiddle {
      width:70%;
      margin: 0 auto;
      }
      .alignmiddle span {
      margin:0.5rem;
      }
  body
    .alignmiddle
      h1 Showing results for #{categories[0]}
    div.leftSidebar 
      - for (var i in categories) {
           div 
            a(href='/category/elemselect/#{categories[i]}') #{categories[i]}
      - }
    div.content
      - for (var i in categoryElems) {
          div.singleCategory 
            div.singlecatHead #{categoryElems[i].name}
            div.leftCat 
              img.catItemImgClass(src='/#{categoryElems[i].image}')
            div.rightCat   
              h2 Description
              p #{categoryElems[i].description}
                h4.phoneClass Phone :  
                span.phoneVal #{categoryElems[i].phone}      
                h4.phoneClass E-Mail :  
                span.phoneVal #{categoryElems[i].email}    
                h4.phoneClass Address :  
                span.phoneVal #{categoryElems[i].address} 
                br
                a(href='/description/#{categoryElems[i].id}') Read More         
            div.clearfix      

      - }
      
      
