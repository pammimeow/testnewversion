doctype html
html
  head
    link(type='text/css', rel='stylesheet', href='/stylesheets/site.css')
    |     
    title Hello
    |   &#x9;
    style.
      .alignmiddle {
      width:70%;
      margin: 0 auto;
      }
      .alignmiddle span {
      margin:0.5rem;
      }
  body
    br
    br
    div
      div.floatRight
        span 
          a(href='/addnew') Add New
        span 
          a(href='/editOps') Edit Ops
      div.clearfix
      br
      br

    .alignmiddle
      h3 #{message}
      form(action='/editCurrent', method='post' enctype='multipart/form-data')
        h1 Add new business
        br
        input(type='hidden', name='id', value='#{item.id}')
        label Name :
        br
        input(type='text', name='name', value='#{item.name}')
        br
        br
        label Business Description :
        br
        textarea(rows='5', cols='30' name='description') #{item.description}
        br
        br
        label Image :
        br
        img.editItemImage(src='#{item.image}')
        input(type='file', name='businessImage')
        br
        br
        label Phone :
        br
        input(type='text', name='phone' value='#{item.phone}')
        br
        br
        label E-Mail :
        br
        input(type='text', name='email' value='#{item.email}')
        br
        br
        label Address :
        br
        textarea(rows='5', cols='30' name='address') #{item.address}
        br
        br
        input(type='submit', name='submitinfo')
